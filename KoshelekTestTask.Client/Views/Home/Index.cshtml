@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the test task for koshelek.ru</h1>
</div>
<h1>Window for sending messages</h1>
<form>
    <div class="form-group">
        <label>Message text</label>
        <input class="form-control" id="message" maxlength="128">
        <small class="form-text text-muted">The maximum length of a sent message must not exceed 128 characters.</small>
    </div>
    <input type="button" id="sendBtn" class="btn btn-primary" value="Отправить" />
</form>

<script type="module" src="~/js/apiSendMessage.js"></script>

<div id="snackbar">The message has been successfully sent</div>
<div id="faultSnackbar">The message was not sent</div>